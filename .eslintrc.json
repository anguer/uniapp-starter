{
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "globals": {
    "uni": true,
    "uniCloud": true,
    "wx": true
  },
  "extends": [
    "plugin:vue/vue3-recommended",
    "plugin:prettier/recommended",
    "./.eslintrc-auto-import.json"
  ],
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "@typescript-eslint/parser",
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["vue", "@typescript-eslint"],
  "rules": {
    "vue/multi-word-component-names": "off"
  }
}
